{
  "openapi": "3.0.1",
  "info": {
    "title": "LINZ QGIS plugin repository ",
    "description": "API documnetaion for LINZ QGIS Plugin Repository.",
    "termsOfService": "",
    "contact": {
      "email": "splanzer@linz.govt.nz"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/mit"
    },
    "version": "1.0.0"
  },
  "externalDocs": {
    "description": "Source code repository",
    "url": "https://github.com/linz/s3-qgis-plugin-repo"
  },
  "servers": [
    {
      "url": "/v1"
    },
    {
      "url": "/dev/v1"
    },
    {
      "url": "/prd/v1"
    }
  ],
  "paths": {
    "/plugin": {
      "get": {
        "tags": [
          "plugin"
        ],
        "summary": "Lists all plugins stored in the repository",
        "operationId": "listAllPlugins",
        "parameters": [
          {
            "name": "stage",
            "in": "query",
            "description": "Stage to fetch plugins from",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "dev"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PluginArray"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/plugin/{plugin_id}": {
      "post": {
        "tags": [
          "plugin"
        ],
        "summary": "Upload a QGIS Plugin",
        "description": "Upload a QGIS Plugin to the repository",
        "operationId": "addPlugin",
        "parameters": [
          {
            "name": "plugin_id",
            "in": "path",
            "description": "Id of plugin to post to",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "stage",
            "in": "query",
            "description": "Flag a stage against the plugin",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "dev"
              ]
            }
          }
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/octet-stream": {
              "schema": {
                "type": "string",
                "format": "binary",
                "properties": {
                  "file": {
                    "type": "string",
                    "description": "Plugin file to be uploaded",
                    "format": "binary"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Plugin Upload",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Plugin"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "plugin"
        ],
        "summary": "Get details of specfic plugin",
        "operationId": "getPlugin",
        "parameters": [
          {
            "name": "plugin_id",
            "in": "path",
            "description": "Id of plugin to retrieve",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "stage",
            "in": "query",
            "description": "Stage to fetch plugin from",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "dev"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Plugin Retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Plugin"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "plugin"
        ],
        "summary": "Archive a plugin",
        "operationId": "archivePlugin",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "plugin_id",
            "in": "path",
            "description": "Id of plugin to delete",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "stage",
            "in": "query",
            "description": "Stage to delete plugin from",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "dev"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Plugin removed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Plugin"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/plugin/{plugin_id}/revision": {
      "get": {
        "tags": [
          "plugin"
        ],
        "summary": "Get all revisions for a specfic plugin",
        "operationId": "getPluginRevisions",
        "parameters": [
          {
            "name": "plugin_id",
            "in": "path",
            "description": "Id of plugin revisions to retrieve",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "stage",
            "in": "query",
            "description": "Stage to get revisions from",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "dev"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Plugin revisions",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PluginArray"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/plugins.xml": {
      "get": {
        "tags": [
          "plugin_xml"
        ],
        "summary": "Get XML representation of all current production plugins",
        "operationId": "getXml",
        "parameters": [
          {
            "name": "stage",
            "in": "query",
            "description": "Stage to fetch plugins from",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "dev"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Plugin XML",
            "content": {
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/pyqgis_plugin"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/dev/plugins.xml": {
      "get": {
        "tags": [
          "plugin_xml"
        ],
        "summary": "Get  XML representation of all current development plugins",
        "operationId": "getDevXml",
        "parameters": [
          {
            "name": "stage",
            "in": "query",
            "description": "Stage to fetch plugins from",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "dev"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Plugin XML",
            "content": {
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/pyqgis_plugin"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/version": {
      "get": {
        "tags": [
          "api_metadata"
        ],
        "summary": "Get API version",
        "operationId": "version",
        "responses": {
          "200": {
            "description": "Get API version information. 'Hash' is the git commit hash the api was deplyoed from. 'Version' is the tag related to the commit the API was deployed from. If a tag does not exist, 'Version' is also the commit hash.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Version"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": [
          "api_metadata"
        ],
        "summary": "Get API health status",
        "operationId": "health",
        "responses": {
          "200": {
            "description": "Get API health status",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Health"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/ping": {
      "get": {
        "tags": [
          "api_metadata"
        ],
        "summary": "Ping",
        "operationId": "ping",
        "responses": {
          "200": {
            "description": "Ping - Used to validate the service is up"
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Plugin": {
        "type": "object",
        "properties": {
          "about": {
            "type": "string"
          },
          "author_name": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "changelog": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "deprecated": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "ended_at": {
            "type": "string"
          },
          "experimental": {
            "type": "string"
          },
          "file_name": {
            "type": "string"
          },
          "homepage": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "item_version": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "qgis_maximum_version": {
            "type": "string"
          },
          "qgis_minimum_version": {
            "type": "string"
          },
          "repository": {
            "type": "string"
          },
          "revisions": {
            "type": "number"
          },
          "tags": {
            "type": "string"
          },
          "tracker": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        }
      },
      "PluginArray": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Plugin"
        }
      },
      "pyqgis_plugin": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "xml": {
              "attribute": true
            }
          },
          "version": {
            "type": "string",
            "xml": {
              "attribute": true
            }
          },
          "about": {
            "type": "string"
          },
          "author_name": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "deprecated": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "download_url": {
            "type": "string"
          },
          "experimental": {
            "type": "string"
          },
          "file_name": {
            "type": "string"
          },
          "homepage": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "qgis_maximum_version": {
            "type": "string"
          },
          "qgis_minimum_version": {
            "type": "string"
          },
          "repository": {
            "type": "string"
          },
          "tags": {
            "type": "string"
          },
          "tracker": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        }
      },
      "Version": {
        "type": "object",
        "properties": {
          "hash": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        },
        "example": {
          "hash": "685ba41",
          "version": "v1.0.1"
        }
      },
      "Health": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "checks": {
            "type": "string"
          }
        },
        "example": {
          "status": "ok"
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}